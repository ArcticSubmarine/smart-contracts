{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./test",
    "./src",
    "./scripts"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
