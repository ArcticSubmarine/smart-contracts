{
  "name": "fundraising-contract-avax",
  "version": "0.0.1",
  "description": "Square token contract running on Avalanche network",
  "main": "index.js",
  "scripts": {
    "accounts": "npx hardhat accounts",
    "balances": "npx hardhat balances",
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy-square.js",
    "deploy:testnet": "npx hardhat run scripts/deploy-square.js --network fuji",
    "start:avalanche": "cd $GOPATH/src/github.com/ava-labs/avalanchego && ./build/avalanchego --network-id=local --staking-enabled=false --snow-sample-size=1 --snow-quorum-size=1",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepsquare-io/fundraising-contract-avax.git"
  },
